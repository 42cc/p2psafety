<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="ua.ip.sosmessage"
          android:versionCode="5"
          android:versionName="2.1">

    <uses-sdk
            android:minSdkVersion="8"
            android:targetSdkVersion="18"/>

    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.telephony"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">

        <service android:name=".DelayedSosService" />

        <activity
                android:name=".SosActivity"
                android:screenOrientation="portrait"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerTick"/>
                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerFinish"/>
                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerCancel"/>
            </intent-filter>
        </activity>

        <receiver android:name=".widget.Widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerTick"/>
                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerFinish"/>
                <action android:name="ua.ip.sosmessage.DelayedSosService.TimerCancel"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/wprovider"/>
        </receiver>

    </application>


</manifest>
