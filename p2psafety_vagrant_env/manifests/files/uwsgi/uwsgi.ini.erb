[uwsgi]
# Define variables
project = %n
base_dir = /home/vagrant/virtualenvs/<%= @project %>

# Config
uid = <%= @uwsgi_user %>
gid = <%= @uwsgi_group %>

socket = <%= @sock_dir %>/%(project).sock
master = true
no-orphans = true

chdir = %(base_dir)/%(project)
module = %(project).wsgi:application
virtualenv = %(base_dir)

logto = /var/log/uwsgi/%(project).log
